<!DOCTYPE html>
<html>

<head>
  <title>IRC</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"/>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div class="col-md-4"></div>
  <div id="colMessages" class="col-md-4">
    <div id="divMessages" class="row-md-4">
      <h1>Messages</h1>
      <ul style="width: auto; height: 750px; overflow: auto">
        <%
        var list = '';
        for (i = 0; i < messagesList.length; i++) {
          list += '<li>' +'<div class="row-md-4" style="font-size: 10px;">' + messagesList[i].Date + ' - ' + messagesList[i].From + ': ' +
            '</div>'+'<div class="row-md-4">' +  messagesList[i].Message + '</div>'+'</li>';
        }
        %>
        <%- list %>
      </ul>
    </div>
    <div class="row-md-4">
      <div class="col-md-10">
        <form id="formSendMessage" name="sendmessage" method="post" action="irc/sendmessage">
          <input id="inputMessage" type="text" Class="form-control" autocomplete="off"
            placeholder="Enter a message here" name="message" /></form>
      </div>
      <div class="col-md-1">
        <button id="btnSubmit" style="width: 100px;" type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </div>

</body>

</html>